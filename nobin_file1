Armstrong or not

#include<stdio.h>
void main()
{
     int n,s=0,c,r;
     printf("enter a number\n");
     scanf("%d",&n);
     c=n;
     while(n!=0)
     {
        r=n%10;
        s=s+(r*r*r);
        n=n/10;
     }
     if(c==s)
     {
        printf("number is armstrong");
     }
     else
     {
        printf("number is not armstrong");
     }
}
